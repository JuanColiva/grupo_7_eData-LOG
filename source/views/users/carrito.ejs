<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../products/head.ejs")  %> 
        <link rel="stylesheet" href="/css/carrito.css">
    </head>
    <body>
        <header>
            <%- include ("../products/encabezado.ejs") %> 
        </header>
        <main>
            <section class="superior">
                <div class="contenedor1">
                    <i class="fa-solid fa-cart-shopping"><h4>Su carrito</h4></i>
                    <i class="fa-solid fa-arrow-right-long"></i>
                    <i class="fa-solid fa-right-to-bracket"><h4>Login</h4></i>
                    <i class="fa-solid fa-arrow-right-long"></i>
                    <i class="fa-solid fa-hand-holding-dollar"><h4>Pago</h4></i>
                    <i class="fa-solid fa-arrow-right-long"></i>
                    <i class="fa-solid fa-circle-down"><h4>Descarga</h4></i>
                </div>
            </section>
            <section class="arrow-down">
                <i class="fa-solid fa-arrow-down-long"></i>
            </section>
            <section class="inferior">
                <div class="contenedor2">
                    <h3>Detalles del producto</h3>
                    <h3>Precio</h3>
                </div>
                <div class="contenedor3">
                    <h3>Valor total:</h3>
                    <h3>Confirmar</h3>
                    <em>
                        o<br>
                        <a href="/precios">Continuar averiguando</a>
                    </em>
                </div>
            </section>
            <section class="arrow-down">
                <i class="fa-solid fa-arrow-down-long"></i>
            </section>
            <section class="login-box">
                <h2>Login</h2>
                <form>
                    <input type="text" placeholder="usuario o email" class="barra-login">
                    <input type="password" placeholder="contraseña" class="barra-login">
                    <label for="recordarme" class="recordarme-aqui">recuerdame en este equipo</label>
                    <input type="checkbox" id="recordarme" name="rememberMe" class="caja">
                    <a href="#" class="contraseña-olvidada">¿Olvidaste tu contraseña?</a>
                    <button type="submit" class="botton-form">Enviar</button>
                </form>
            </section>
            <section class="arrow-down1">
                <i class="fa-solid fa-arrow-down-long"></i>
            </section>
            <section>
                <h2>Forma de pago</h2><img src="/images/Tarjetas aceptadas.png" alt="">
                <form action="">
                    <input type="text" placeholder="Nº de tarjeta" class="card-number" required>
                    <input type="number" placeholder="Vencimiento" class="expiration-card" required>
                    <input type="number" placeholder="CVC" class="cvc" required>
                    <button type="submit" class="botton-pay">Pagar</button><br>
                </form>
            </section>
            <section class="arrow-down1">
                <i class="fa-solid fa-arrow-down-long"></i>
            </section>
            <section class="download">
                <i class="fa-solid fa-file-arrow-down"></i>
            </section>
        </main>
        <footer class="main-footer">
            <%- include ("../products/footer.ejs") %> 
        </footer>
    </body>
</html>