<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head.ejs")  %>
        <link rel="stylesheet" href="/css/create.css">
    </head>
    <body>
        <header>
            <%- include("../partials/header.ejs")  %>   
        </header>
<body>
    <main>
    <nav>
    </nav>
    <form action="/productos/actualizar?m=PUT" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%= product.id %>" >
        <section class="formularioPadre">
            <a href="/productos" class="vuelta">Volver</a>

        <fieldset class="formularioHijo">
            <legend>Nombre de producto</legend>
            <input type="text" name="name" id="name" value="<%= product.name %>" >
        </fieldset>
        <fieldset class="formularioHijo">
            <legend>Descripci√≥n del producto</legend>
            <input type="text" name="descripcion" id="descripcion" value="<%= product.descripcion %>"  >
        </fieldset>
        <fieldset class="formularioHijo2">
            <legend>Plan del producto</legend>
            <input type="radio" name="plan"id="plan-mult"  value="Multiespacio" <%= product.plan == "Multiespacio" ? "checked" : "" %>>
            <label for="category-mult">Multiespacio</label>
            <input type="radio" name="plan" id="plan-bas"  value="Basico" <%= product.plan == "Basico" ? "checked" : "" %>>
            <label for="category-bas">Basico</label>
            <input type="radio" name="plan" id="plan-pre"  value="Premium" <%= product.plan == "Premium" ? "checked" : "" %>>
            <label for="category-pre">Premium</label> 
        </fieldset>

        <fieldset>
            <legend>Archivos</legend>
            <input type="file" name="imagen">
        </fieldset>


        <button type="submit" class="botton">Guardar</button>
    </section>
    </form>
</main>
<footer class="main-footer">
    <%- include ("../partials/footer.ejs") %> 
</footer>
</body>
</html>