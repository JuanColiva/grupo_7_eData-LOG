<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head.ejs")  %>
        <link rel="stylesheet" href="/css/productos.css">
    </head>
    <body>
        <header>
            <%- include("../partials/header.ejs")  %>   
        </header>
        <main>
                <ul>
                    <% for( let i = 0; i < productos.length; i++ ) { %>
                        <%- include( "../partials/producto.ejs", {producto:productos[i]})  %>
                   <% } %>
                </ul>
                <% if (user && user.admin) { %>
                    <nav class="nuevo">
                        <a href="/productos/nuevo">Agregar Producto <i class="fa-solid fa-plus"></i></a>
                    </nav>
            <% } %>
        </main>
        <footer class="main-footer">
            <%- include ("../partials/footer.ejs") %> 
        </footer>
    </body>
</html>