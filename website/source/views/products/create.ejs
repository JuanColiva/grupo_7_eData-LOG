<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head.ejs")  %>
        <link rel="stylesheet" href="/css/create.css">
    </head>
    <body>
        <header>
            <%- include("../partials/header.ejs")  %>   
        </header>
<body>
    <main>
        <%- include("../partials/hb.ejs")  %>
    <form action="/productos/guardar" method="post" enctype="multipart/form-data" id="formulario">
        <section class="formularioPadre">
            <a href="/productos" >Volver</a>

        <div class="formularioHijo" id="formulario1">
            <legend>Nombre de producto</legend>
            <input type="text" name="name" id="name"
            value="<%= locals.errores && !locals.errores.name && locals.data ? locals.data.name : null %>"
                        class="barra-login">
                        <p class="barra-register-error">solo puede tener letras, giones bajos y acentos</p>
                        <% if (locals.errores && locals.errores.name) { %>
                        <p class="feedback">
                            <%= locals.errores.name.msg  %> 
                        </p>
                        <% } %>
        </div>
        <div class="formularioHijo" id="formulario2">
            <legend>Descripci√≥n del producto</legend>
            <input type="text" name="descripcion" id="Descripcion"
            value="<%= locals.errores && !locals.errores.descripcion && locals.data ? locals.data.descripcion : null %>"
                        class="barra-login">
                        <p class="barra-register-error">la descripcion puede tener letras, giones bajos y acentos</p>
                        <% if (locals.errores && locals.errores.descripcion) { %>
                        <p class="feedback">
                            <%= locals.errores.descripcion.msg  %> 
                        </p>
                        <% } %>
        </div>
        <div class="formularioHijo2">
            <legend>Plan del producto</legend>
            <input type="radio" name="plan"id="plan-mult" value="Multiespacio">
            <label for="category-mult">Multiespacio</label>
            <input type="radio" name="plan" id="plan-bas" value="Basico">
            <label for="category-bas">Basico</label>
            <input type="radio" name="plan" id="plan-pre" value="Premium" >
            <label for="category-pre">Premium</label> 
        </div>
        <legend class="archivos">Archivos</legend>
        <div class="subirImagen" id="formulario3">
            <input type="file" name="imagene">
            <p class="barra-register-error">No has subido una imagen</p>
        </div>
        <button type="submit" class="botton">guardar</button>
    </section>
    </form>
</main>
<footer class="main-footer">
    <%- include ("../partials/footer.ejs") %> 
</footer>
<script src="/scripts/create.js"></script>
<script src="/scripts/hb.js"></script>
</body>
</html>